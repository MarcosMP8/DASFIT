<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/gris_claro">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:title="Detalles de la Rutina"
        app:titleTextColor="@color/rojo_granate"
        app:navigationIcon="@drawable/ic_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/tvTituloRutina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/rojo_granate"
        android:textStyle="bold"
        android:text="Rutina X"
        android:paddingBottom="12dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvDetallesRutina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/rojo_granate"
        android:padding="10dp"
        android:lineSpacingExtra="10dp"
        android:text="Ejercicios aquí"/>

    <!-- Botón para volver atrás -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="Volver"
        android:textColor="@color/rojo_granate"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>
