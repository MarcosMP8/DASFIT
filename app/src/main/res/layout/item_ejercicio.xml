<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="@color/gris_claro">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreEjercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del ejercicio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/rojo_granate"/>

        <TextView
            android:id="@+id/tvDetallesEjercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles del ejercicio"
            android:textSize="14sp"
            android:textColor="@color/rojo_claro"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnEditarEjercicio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_edit"
        android:background="?attr/selectableItemBackground"/>

    <ImageButton
        android:id="@+id/btnEliminarEjercicio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_delete"
        android:background="?attr/selectableItemBackground"/>
</LinearLayout>
