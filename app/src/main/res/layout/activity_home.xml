<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/gris_claro">

    <TextView
        android:id="@+id/tvTituloHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DASFIT"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/rojo_granate"/>

    <TextView
        android:id="@+id/tvSubtituloHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido al cambio"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/rojo_granate"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnRegistrarEntrenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="Registrar Entrenamiento"
        android:textColor="@color/rojo_granate"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnExplorarRutinas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="Explorar Rutinas"
        android:textColor="@color/rojo_granate"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnMiPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="Mi Perfil"
        android:textColor="@color/rojo_granate"
        android:textStyle="bold"/>
</LinearLayout>
